<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.reviewsapp">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="FareJudge App"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ReviewsApp">
        <activity
            android:name=".activites.Profile"
            android:exported="false" />
        <activity
            android:name=".activites.Home"
            android:exported="false" />
        <activity
            android:name=".activites.MakeReview"
            android:exported="false" />
        <activity
            android:name=".activites.Restaurant"
            android:exported="false" />
        <activity
            android:name=".activites.Cafe"
            android:exported="false" />
        <activity
            android:name=".activites.Bar"
            android:exported="false" />
        <activity
            android:name=".activites.Reviews"
            android:exported="false" />
        <activity
            android:name=".activites.Establishments"
            android:exported="false" />
        <activity
            android:name=".activites.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.theartofdev.edmodo.cropper.CropImageActivity" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>